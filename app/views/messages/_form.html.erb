<%= form_for @message, url: user_message_path(@user), html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :content, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, class: 'text_field', rows: 5 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
