<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
  <% selects[subtype].each do |select| %>
      <li>
        <label class="checkbox">
          <% checked = @search_query[:"#{section}_#{key}_in"] && @search_query[:"#{section}_#{key}_in"].include?(select[:key]) %>
          <%= check_box_tag("query[#{section}_#{key}_in][]", select[:key], checked) %>
          <span><%= select[:title] %></span>
        </label>
      </li>
  <% end %>
</ul>
