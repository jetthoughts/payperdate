<%- popup_id = dom_id(invitation, 'accept_popup') -%>
<%= link_to t('invitations.accept'), '#' + popup_id, data: { toggle: :modal } %>

<div class="modal hide" id="<%= popup_id -%>" role="dialog">
  <div>
    <%= t('invitations.accept') %>
    <%= link_to_dismiss -%>
  </div>
  <div>
    <% inviter = invitation.inviter %>

    <%= inviter.name -%>

    <%= number_to_currency(invitation.amount) -%>
  </div>
  <div class="modal-body">
    <%= form_tag accept_invitation_path(invitation), class: :accept_form do -%>
        <div>
          <%= text_area_tag :message, nil, size: "" -%>
        </div>
        <div>
          <%= submit_tag t('invitations.accept'), class: :btn -%>
        </div>
    <%- end -%>
  </div>

</div>
